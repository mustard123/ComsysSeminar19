journal = {Telecommunications Policy},
keywords = {Blockchain,Cloud computing,Cybersecurity,Internet of things,Privacy,Supply chain},
number = {10},
pages = {1027--1038},
pmid = {10586902},
publisher = {Elsevier Ltd},
title = {{Blockchain's roles in strengthening cybersecurity and protecting privacy}},
volume = {41},
